; ================== MODULES ==================

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
label-layout = %layout%

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline = #444
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2
label-unfocused-background = ${colors.background-alt}
label-unfocused-underline = ${colors.background-alt}

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${colors.background-alt}
label-visible-underline = ${colors.background-alt}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

; Separator in between workspaces
; label-separator = |

[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format = <label>
exec = python3 ~/.config/polybar/spotify-status.py -f '{artist} - {song}'
format-background = ${colors.background-alt}

click-right = "~/.config/polybar/spotify-ctrl.sh next"
click-left = "~/.config/polybar/spotify-ctrl.sh play"

[module/mpd-controls]
type = internal/mpd

format-online = <icon-prev> <icon-stop> <toggle> <icon-next>
format-background = #990066
format-foreground = #fbad31

label-song = %{T4}◤%{T-}
label-song-background = ${colors.background}
label-song-foreground = ${colors.background-alt}


label-time = %{T4}◢%{T-}
label-time-background = ${colors.background}
label-time-foreground = ${colors.background-alt}

format-offline = <label-offline>
label-offline = 

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

;icon-prev-background = ${colors.background-alt}
;icon-stop-background = ${colors.background-alt}
;icon-play-background = ${colors.background-alt}
;icon-pause-background = ${colors.background-alt}
;icon-next-background = ${colors.background-alt}

[module/mpd-songlabel]
type = internal/mpd
