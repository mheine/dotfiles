# === RELOADING / RESTARTING / RESIZING ===

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec --no-startup-id "i3-msg exit"

# resize window (you can also use the mouse for that)
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode

    # Arrow keys [1-step]
    bindsym Left resize shrink width 1 px or 1 ppt
    bindsym Down resize grow height 1 px or 1 ppt
    bindsym Up resize shrink height 1 px or 1 ppt
    bindsym Right resize grow width 1 px or 1 ppt

    # Arrow keys [5-step]
    bindsym Control+Left resize shrink width 5 px or 5 ppt
    bindsym Control+Down resize grow height 5 px or 5 ppt
    bindsym Control+Up resize shrink height 5 px or 5 ppt
    bindsym Control+Right resize grow width 5 px or 5 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"


# === STARTUP APPLICATIONS ===

# start polybar
exec_always --no-startup-id $HOME/.config/polybar/polystart.sh

# Enable three finger tap
exec_always --no-startup-id synclient TapButton3=2

# enable better screen colours during late hours
exec_always --no-startup-id redshift

# Background image
exec --no-startup-id feh --bg-fill ~/Pictures/Wallpapers/abstract-black-low-poly.jpg

# enhanced notifications using dunst
exec killall -q notify-osd
exec --no-startup-id dunst -config /home/marcus/.config/.dunstrc


# === MEDIA KEYS AND SPECIFIC KEYBOARD BINDINGS ===

# printscreen
bindsym Print exec --no-startup-id scrot -e 'mv $f /home/marcus/Pictures/screenshots/'

# volume (using amixer)
bindsym Ctrl+$alt+Up exec --no-startup-id amixer -D pulse sset Master 10%+ && killall -SIGUSR1 i3status
bindsym Ctrl+$alt+Down exec --no-startup-id amixer -D pulse sset Master 10%- && killall -SIGUSR1 i3status

bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -D pulse sset Master 10%+ && killall -SIGUSR1 i3status
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -D pulse sset Master 10%- && killall -SIGUSR1 i3status

# pause/play/next/previous

bindsym XF86AudioPlay exec --no-startup-id "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
bindsym XF86AudioNext exec --no-startup-id "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"
bindsym XF86AudioPrev exec --no-startup-id "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"

# brightness (using light)
bindsym XF86MonBrightnessUp exec --no-startup-id light -A 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id light -U 10 # decrease screen brightness


